# 应用配置
APP_NAME="Outlook Web Tool"
DEBUG=false
SECRET_KEY="your-secret-key-change-this-in-production"

# 数据库 URL (Zeabur 会自动提供)
# 格式: postgresql://username:password@host:port/database
DATABASE_URL=""

# Redis URL (Zeabur 会自动提供)
# 格式: redis://username:password@host:port
REDIS_URL=""

# Microsoft OAuth 应用配置
# 在 Azure Portal 注册应用获取: https://portal.azure.com
# 从 Azure Portal 获取这些值: https://portal.azure.com
# 应用注册 → 你的应用 → 概述/证书和密码
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_REDIRECT_URI="https://your-app.zeabur.app/auth/callback"
MICROSOFT_TENANT_ID="common"

# Token 加密密钥 (至少32位随机字符串)
# 生成命令: openssl rand -base64 32
ENCRYPTION_KEY=""

# AI 服务配置 (你的 API)
AI_API_URL="https://your-ai-service.com/api"
AI_API_KEY=""
AI_MODEL="gpt-4"

# SMTP 配置 (你的邮件服务)
# 示例：Outlook SMTP
# SMTP_HOST="smtp-mail.outlook.com"
# SMTP_PORT=587
# SMTP_USER="yjc2838892094@outlook.com"
# SMTP_PASSWORD="your-app-password"  # 注意：如果开启了两步验证，需要使用"应用密码"
# SMTP_USE_TLS=true

SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_USE_TLS=true